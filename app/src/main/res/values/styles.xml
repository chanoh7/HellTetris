<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- 블록 층 리니어  -->
	<style name="blockLine">
		<item name="android:layout_height">0dp</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_marginTop">1dp</item>
	</style>
	
	<!-- 빈칸 블록 -->
	<style name="emptyBlock">
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_marginRight">1dp</item>
		<item name="android:background">@color/black</item>
		<item name="android:scaleType">fitXY</item>
	</style>
	
	<!-- 미리보기 층 리니어 -->
	<style name="previewLine" parent="blockLine">
		<item name="android:layout_weight">3</item>
	</style>
	
	<!-- 미리보기 층 여백 리니어 -->
	<style name="emptyPreviewLine" parent="blockLine">
		<item name="android:layout_weight">1</item>
	</style>
	
	<!-- 미리보기 블록 -->
	<style name="previewBlock" parent="emptyBlock">
		<item name="android:layout_weight">3</item>
	</style>
	
	<!-- 미리보기 블록 -->
	<style name="emptyPreviewBlock" parent="emptyBlock">
		<item name="android:layout_weight">1</item>
		<item name="android:background">@android:color/darker_gray</item>
	</style>
	
	<!-- 오른쪽 세로 리니어  -->
	<style name="gameInfo">
		<item name="android:layout_height">0dp</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_weight">2</item>
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:layout_marginRight">5dp</item>
	</style>
	
	<!-- 숫자 값 -->
	<style name="digitValue">
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
	</style>
	
	<!-- 조작 안내 그림 -->
	<style name="information">
		<item name="android:layout_height">0dp</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_weight">2</item>
		<item name="android:layout_margin">10dp</item>
	</style>

</resources>